@model Surveys.Models.PatientsQuestionnaires

@{
    ViewBag.Title = "Edytuj";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PatientsQuestionnaires</legend>
        @Html.HiddenFor(model => model.PatientId)
        @Html.HiddenFor(model => model.QuestionnaireId)
        @Html.HiddenFor(model => model.FillingDate)
        <div class="display-label">
            @Html.DisplayNameFor(model => model.FillingDate)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.FillingDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExaminationDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExaminationDate)
            @Html.ValidationMessageFor(model => model.ExaminationDate)
        </div>

        <p>
            <input type="submit" value="Zapisz zmiany i przejdź dalej" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
