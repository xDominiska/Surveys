@model Surveys.Models.Patients

@{
    ViewBag.Title = "Edytuj pacjenta";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Patient</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Code)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Code)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Guardian)
        </div>
          <div class="editor-field">
            @Html.DropDownListFor(model => model.Guardian, ViewBag.GuardianChoice as IEnumerable<SelectListItem>)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BirthDate) (format: RRRR-MM-DD)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BirthDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Gender)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Gender, ViewBag.GenderChoice as IEnumerable<SelectListItem>)
        </div>

        <p>
            <input type="submit" value="Zapisz zmiany" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Wróć do listy pacjentów", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
